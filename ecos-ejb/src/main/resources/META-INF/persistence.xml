<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="ecos">
		<jta-data-source>java:/pfe</jta-data-source>
		<class>tn.crns.ecos.model.Utilisateur</class>
		<class>tn.crns.ecos.model.Administrateur</class>
		<class>tn.crns.ecos.model.Epreuve</class>
		<class>tn.crns.ecos.model.Etudiant</class>
		<class>tn.crns.ecos.model.Station</class>
		<class>tn.crns.ecos.model.Examen</class>
		<class>tn.crns.ecos.model.StationExamen</class>
		<class>tn.crns.ecos.model.StationExamenPK</class>
		<class>tn.crns.ecos.model.Objectif</class>
		<class>tn.crns.ecos.model.Item</class>
		<class>tn.crns.ecos.model.Enseignant</class>

		<class>tn.crns.ecos.outils.FileStorageEntity</class>
		<properties>
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.event.merge.entity_copy_observer"
				value="allow" />
		</properties>
	</persistence-unit>
</persistence>
